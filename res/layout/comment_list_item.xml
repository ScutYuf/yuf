<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/comment_list_item_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/comment_list_item_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_list_item_username_textview"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/comment_list_item_username_textview"
        android:lines="3"
        android:text="TextView" />

</RelativeLayout>
