<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tab3_mywork_item_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/food1" />

    <TextView
        android:id="@+id/tab3_mywork_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tab3_mywork_item_img"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="2014年7月1日10点00分" />

    <TextView
        android:id="@+id/tab3_mywork_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tab3_mywork_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="红烧牛肉"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/tab3_mywork_item_name"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/tab3_mywork_item_name"
        android:src="@drawable/rightrow" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tab3_mywork_item_name"
        android:layout_below="@+id/imageView1"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxx" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="评论（XX）"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/imageView1"
        android:text="赞（XX）"
        android:textSize="10sp" />

</RelativeLayout>
