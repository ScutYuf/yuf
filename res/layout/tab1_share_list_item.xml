<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5px"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head_img"
        android:layout_toRightOf="@+id/head_img"
        android:layout_weight="1"
        android:text="名字"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_text"
        android:layout_centerHorizontal="true"
        android:text="分享了一道菜" />

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/time_text"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/food_image"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/head_img"
        android:layout_toRightOf="@id/head_img"
        android:src="@drawable/food1" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/food_image"
        android:layout_alignRight="@+id/food_image"
        android:layout_below="@+id/food_image"
        android:text="时间" />

    <ImageView
        android:id="@+id/comment_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time_text"
        android:layout_marginRight="24dp"
        android:src="@drawable/medal" />

</RelativeLayout>