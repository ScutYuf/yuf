<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:orientation="vertical"
    android:background="#fff" >
   <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/back_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/button_details_gohome" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="食材"
            android:textSize="20sp"/>
       
        <Button
            android:id="@+id/buyFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="购买食材"
            android:textSize="20sp"
            android:background="#DC143C"/>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:background="#ccccff"
        android:fadingEdge="vertical|none"
        android:fadingEdgeLength="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我们为您提供的食材:" 
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>


            <com.yuf.app.mywidget.MyGridView
                android:id="@+id/food_material_gridview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="vertical|none"
                android:numColumns="3" >

            </com.yuf.app.mywidget.MyGridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="辅料（需自备）:" 
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <com.yuf.app.mywidget.MyGridView
                android:id="@+id/food_material_gridview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="vertical|none"
                android:numColumns="3" >

            </com.yuf.app.mywidget.MyGridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="配料:" 
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <com.yuf.app.mywidget.MyGridView
                android:id="@+id/food_material_gridview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="vertical|none"
                android:numColumns="3" >

			</com.yuf.app.mywidget.MyGridView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
